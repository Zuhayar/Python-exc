from time import sleep

n = 10 
while n >= 0: 
    if n == 5: 
        print('Place your reservations soon!',n,'minutes remaining.')
        sleep(1)
        n-= 1
    elif n == 2:
        print("Don't lose your seats!",n, "minutes remaining.")
        sleep(1)
        n-= 1
    elif n == 0:
        print("User timed out")
        n-= 1
        
    else: 
        print(n)
        sleep(1)
        n -= 1
    
        
